 {{!-- {{> header }} --}}

<div class="hero">

<header>
  <h1>{{title}}</h1>
  <p>Hello {{user_name}}!</p>
</header>


  <form action="/addPost" method="POST">
            <input type="text" name="instrument type" placeholder="your instrumet" />
            <input type='text' name="description" placeholder="describe your instrument" />
            <input type="text" name="contact info" placeholder="add number" />
            <input type="number" name="price" placeholder="add price" />
            <input type="hidden" name="user_id" value="{{user_id}}">
            <input type="text" name="urlImage" placeholder="add image" />
            <input type="submit" />
        </form>

<ul id="list" class="list">
  {{#each likedposts}} 
  <li class="user">
    <span>
    {{this.instrument_type}} 
    </span>
    <span>{{this.description}}</span>

    <span> {{this.contact_info}}</span>
    <span>{{this.price}}</span>
    </li>
  {{/each}}
</ul>
      </div>
  <script src="/index.js"></script>
